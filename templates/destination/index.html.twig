{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for destination in pagination %}
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="{{ vich_uploader_asset(destination, 'imageFile') }}" class="card-img-top" alt="{{ destination.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ destination.name }}</h5>
                            <p class="card-text">{{ destination.description|slice(0, 100) }}{% if destination.description|length > 100 %}...{% endif %}</p>
                            <a href="{{ path('destination_show', {'id': destination.id}) }}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
