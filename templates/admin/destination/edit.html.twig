{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Edit Destination</h1>

        {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
        <div class="mb-3">
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price, 'Price', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.price) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.duration, 'Duration', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.duration) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.imageFile, 'Images', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>

        <button class="btn btn-primary">Save Changes</button>
        {{ form_end(form) }}

        <a class="btn btn-secondary mt-3" href="{{ path('admin_destination_index') }}">Back to list</a>
    </div>
{% endblock %}
