{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Destination Details</h1>

        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <td>{{ destination.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ destination.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ destination.price }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ destination.duration }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    <img src="{{ vich_uploader_asset(destination, 'imageFile') }}" alt="{{ destination.name }}" class="img-thumbnail" style="width: 150px; height: auto;">
                </td>
            </tr>
        </table>

        <a class="btn btn-secondary" href="{{ path('admin_destination_index') }}">Back to list</a>
        <a class="btn btn-primary" href="{{ path('admin_destination_edit', {id: destination.id}) }}">Edit</a>

        <form method="post" action="{{ path('admin_destination_delete', {id: destination.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ destination.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
